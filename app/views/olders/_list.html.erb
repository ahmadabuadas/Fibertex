<table class="table table-striped table-inverse">
    <thead>
        <tr>
        <th>Company</th>
        <th>Item</th>
        <th>Description</th>
        <th>Location</th>
        <th>Machien</th>
        <th>Image</th>
        </tr>
    </thead>
    <tbody>
        <% @olders.each do |older| %>
        <tr>
       
        <td><%= older.company %></td>
        <td><%= older.item %></td>
        <td><%= older.description %></td>
        <td><%= older.location %></td>
        <td><%= older.machien %></td>
        <td> <%= image_tag older.image.url(:thumb) %></td>
        <td><%= link_to "Edit", edit_older_path(older), class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to "Show", older_path(older), class: "btn btn-sm btn-success" %></td> 
        <td><%= link_to "Delete", older_path(older), method: :delete,
        data: { confirm: "Are you sure you want to delete the article?"},
         class: "btn btn-sm btn-danger" %></td>
        <td><button type="button" class="btn btn-primary btn-sm">Done</button></td>
         
        </tr>
        <% end %>
    </tbody>
</table>


    
    